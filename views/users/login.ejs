<% layout('layouts/boilerplate') %>
  <% layout('layouts/boilerplate') %>

    <div class="container mt-5 col-md-6 offset-md-3">
      <div class="card shadow-lg rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4 text-center">
          <h3>Login to Your Account</h3>
        </div>

        <form action="/login" method="POST" novalidate class="needs-validation">
          <div class="card-body">
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" class="form-control rounded-3" id="username" name="username" required minlength="3"
                maxlength="20">
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please enter your username.</div>
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control rounded-3" id="password" name="password" required
                minlength="6">
              <div class="valid-feedback">Password looks valid!</div>
              <div class="invalid-feedback">Please enter your password.</div>
            </div>
          </div>

          <div class="card-footer text-center rounded-bottom-4 p-3">
            <button type="submit" class="btn btn-success w-100">Login</button>
            <p class="mb-0">Don't have an account? <a href="/signup" class="text-decoration-none">Register here</a></p>
          </div>


        </form>
      </div>
    </div>