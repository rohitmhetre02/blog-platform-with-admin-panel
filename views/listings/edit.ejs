<% layout('layouts/boilerplate') %>

  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10 col-sm-12">

        <h2 class="fw-bold mb-4 text-center">Edit Blog Post</h2>

        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT"
          class="bg-light p-4 rounded shadow-sm needs-validation" novalidate enctype="multipart/form-data">
          <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input name="listings[title]" type="text" class="form-control" id="title" value="<%= listing.title %>"
              required>
            <div class="invalid-feedback">Please provide a valid title.</div>
          </div>


          <div class="mb-4" style="text-align: center;">
            Original Post Image
            <img src="<%= listing.image.url %>" class="img-fluid rounded shadow-sm mx-auto d-block" alt="Blog Image"
              style="max-height:170px; object-fit: cover;">
          </div>


          <div class="mb-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input name="image" type="file" class="form-control" id="image" value="<%= listing.image %>">
          </div>

          <div class="mb-3">
            <label for="category" class="form-label">Category:</label>
            <input name="listings[category]" type="text" class="form-control" id="category"
              value="<%= listing.category %>" required>
            <div class="invalid-feedback">Please provide a valid category.</div>
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea name="listings[description]" rows="15" class="form-control" id="description"
              required><%= listing.description %></textarea>

            <div class="invalid-feedback">Please enter a description.</div>
          </div>


          <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Update Listing</button>
            <a href="/listings/<%= listing._id %>" class="btn btn-outline-secondary">Cancel</a>
          </div>
        </form>

      </div>
    </div>
  </div>